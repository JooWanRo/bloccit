<%= form_for [@post, Comment.new], remote: true do |f| %>
  <h3>Add a comment:</h3>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class:'form-control' %> 
  </div>
  <div class="form-group">
    <%= f.submit "Create Comment", class: 'btn btn-success' %>
  </div>
<% end %>
